{
  "name": "mai-landing",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/tailwind.css --watch",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./public/css/tailwind.css --minify",
    "dev:scss": "sass --watch ./src/styles/scss/main.scss ./public/css/main.css",
    "build:scss": "sass ./src/styles/scss/main.scss ./public/css/main.css --style=compressed",
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm run build:css && npm run build:scss"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "sass": "^1.82.0",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17"
  }
}
